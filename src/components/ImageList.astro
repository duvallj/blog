---
import { Image } from "astro:assets";
import type { ImageListProps } from "../models/ImageList";

type Props = ImageListProps;

const { images } = Astro.props;
---

{
  images.map((image) => (
    <figure class="photography-figure">
      <h3 set:html={image.title} />
      <Image
        src={image.imgfile}
        title={image.imgtitle}
        alt={image.imgalt ?? "A photograph"}
        loading={image.eager ? "eager" : undefined}
        quality="max"
      />
      <figcaption set:html={image.caption} />
    </figure>
  ))
}
