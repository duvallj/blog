---
import "../css/wordpress.css";
import "../css/colorscheme.css";
import type { DefaultProps } from "../models/Default";
import { Image } from "astro:assets";
import randomlogo from "../assets/randomlogo.png";

type Props = DefaultProps;
const {
  frontmatter: { description, title },
} = Astro.props;
---

<!doctype html>
<html lang="en-US">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {
      description ? (
        <meta name="description" content={description} />
      ) : (
        <meta name="description" content={title} />
      )
    }
    <title>Jack Duvall's Blog - {title}</title>
    <link
      rel="icon"
      type="image/png"
      href="/uploads/favicon-16.png"
      sizes="16x16"
    />
    <link
      rel="icon"
      type="image/png"
      href="/uploads/favicon-32.png"
      sizes="32x32"
    />
    <link rel="icon" type="image/png" href="/uploads/favicon-200.png" />
    <slot name="head" />
  </head>
  <body>
    <div id="sidebar" class="sidebar">
      <header id="masthead" class="site-header" role="banner">
        <div class="branding">
          <a class="branding-logo-link" href="/">
            <Image
              class="branding-logo"
              src={randomlogo}
              loading="eager"
              alt="DuvallJ's Blog"
            />
          </a>
          <h1 class="branding-title">
            <a href="/" rel="home">Jack Duvall's Blog</a>
          </h1>
          <h4 class="branding-subtitle">"This is a website yes"</h4>
        </div>
        <nav>
          <a href="/" rel="home">home</a>
          <a href="/about.html" rel="author">about</a>
          <a href="/contact.html">contact</a>
          <a href="/archive.html">archive</a>
          <a href="/tags.html">tags</a>
          <a href="/friends.html">friends</a>
          <a href="/photography.html">photography</a>
        </nav>
      </header>
    </div>

    <div id="content" class="site-content">
      <div id="primary" class="content-area">
        <main id="main" class="site-main" role="main">
          <slot />
        </main>
      </div>
    </div>

    <footer class="site-footer">
      Github: <a href="https://github.com/duvallj/blog">duvallj</a>
      Youtube: <a
        href="https://www.youtube.com/channel/UCDYZSCLUE5hnoKiWAegmc1g"
        >Jack Duvall</a
      >
    </footer>
  </body>
</html>
